<p id="notice"><%= notice %></p>

<h1>Ear Elements</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ear_elements.each do |ear_element| %>
      <tr>
        <td><%= ear_element.name %></td>
        <td><%= ear_element.img %></td>
        <td><%= link_to 'Show', ear_element %></td>
        <td><%= link_to 'Edit', edit_ear_element_path(ear_element) %></td>
        <td><%= link_to 'Destroy', ear_element, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

